[flake8]
max-line-length = 100
exclude = 
    venv,
    migrations,
    __pycache__,
    .venv,
    manage.py,
    settings.py
ignore = 
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by other tools)
per-file-ignores =
    __init__.py:F401
max-complexity = 10

